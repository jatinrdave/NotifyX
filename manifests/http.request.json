{
  "$schema": "https://notifyx.dev/schemas/connector-manifest.json",
  "id": "http.request",
  "name": "HTTP Request",
  "version": "1.0.0",
  "type": "action",
  "category": "Integration",
  "description": "Make HTTP requests to any REST API endpoint with full control over headers, authentication, and request body.",
  "icon": "https://cdn.notifyx.dev/icons/http.svg",
  "inputs": [
    {
      "name": "url",
      "type": "string",
      "required": true,
      "default": "",
      "description": "The URL to make the request to"
    },
    {
      "name": "method",
      "type": "string",
      "required": true,
      "default": "GET",
      "description": "HTTP method to use",
      "options": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"]
    },
    {
      "name": "headers",
      "type": "object",
      "required": false,
      "default": {},
      "description": "HTTP headers to send with the request"
    },
    {
      "name": "body",
      "type": "string",
      "required": false,
      "default": "",
      "description": "Request body (for POST, PUT, PATCH requests)"
    },
    {
      "name": "timeout",
      "type": "number",
      "required": false,
      "default": 30000,
      "description": "Request timeout in milliseconds"
    },
    {
      "name": "followRedirects",
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Whether to follow HTTP redirects"
    },
    {
      "name": "ignoreSSL",
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Whether to ignore SSL certificate errors"
    }
  ],
  "outputs": [
    {
      "name": "statusCode",
      "type": "number",
      "description": "HTTP status code of the response"
    },
    {
      "name": "headers",
      "type": "object",
      "description": "Response headers"
    },
    {
      "name": "body",
      "type": "string",
      "description": "Response body"
    },
    {
      "name": "json",
      "type": "object",
      "description": "Parsed JSON response (if applicable)"
    },
    {
      "name": "duration",
      "type": "number",
      "description": "Request duration in milliseconds"
    }
  ],
  "auth": {
    "type": "none",
    "fields": {}
  },
  "ui": {
    "color": "#FF6B6B",
    "iconShape": "square",
    "group": "HTTP"
  },
  "metadata": {
    "tags": ["http", "api", "rest", "webhook", "integration"],
    "documentationUrl": "https://docs.notifyx.dev/connectors/http-request",
    "createdBy": "NotifyX Team"
  }
}