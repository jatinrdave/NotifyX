{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "NotifyXStudio": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "NotifyXStudio": "Information"
      }
    }
  },
  "AllowedOrigins": [
    "https://app.notifyx.studio",
    "https://dashboard.notifyx.studio",
    "https://admin.notifyx.studio"
  ],
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "ExpiryInMinutes": 30,
    "RefreshTokenExpiryInDays": 1
  },
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_CONNECTION_STRING}",
    "Redis": "${REDIS_CONNECTION_STRING}",
    "Seq": "${SEQ_CONNECTION_STRING}"
  },
  "RateLimiting": {
    "GeneralRules": {
      "PermitLimit": 50,
      "Window": "00:01:00",
      "ReplenishmentPeriod": "00:00:10",
      "TokensPerPeriod": 5,
      "QueueLimit": 25
    },
    "AuthenticatedRules": {
      "PermitLimit": 500,
      "Window": "00:01:00",
      "ReplenishmentPeriod": "00:00:10",
      "TokensPerPeriod": 50,
      "QueueLimit": 50
    }
  },
  "Security": {
    "RequireHttps": true,
    "UseStrictTransportSecurity": true,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data: https:; font-src 'self'; connect-src 'self'; media-src 'self'; object-src 'none'; child-src 'none'; frame-ancestors 'none'; form-action 'self'; base-uri 'self';"
  },
  "Monitoring": {
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false,
    "MetricsEnabled": true,
    "TracingEnabled": true,
    "PerformanceLogging": false
  },
  "Cache": {
    "DefaultCacheTimeInMinutes": 15,
    "LongCacheTimeInMinutes": 240,
    "ShortCacheTimeInMinutes": 2
  }
}