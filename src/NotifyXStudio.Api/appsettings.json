{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=notifyxstudio;Username=postgres;Password=password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Seq": {
      "ServerUrl": "http://localhost:5341",
      "ApiKey": "",
      "MinimumLevel": "Information",
      "LevelOverride": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/notifyx-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "NotifyXStudio.Api"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:3001",
    "https://localhost:3000",
    "https://localhost:3001"
  ],
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "NotifyXStudio",
    "Audience": "NotifyXStudio.Api",
    "ExpiryInMinutes": 60,
    "RefreshTokenExpiryInDays": 7
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=NotifyXStudio;Trusted_Connection=true;MultipleActiveResultSets=true",
    "Redis": "localhost:6379",
    "Seq": "http://localhost:5341"
  },
  "HealthChecks": {
    "UI": {
      "HealthCheckUIEnabled": true,
      "HealthCheckUIPath": "/health-ui",
      "EvaluationTimeInSeconds": 30,
      "MaximumHistoryEntriesPerEndpoint": 50
    }
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "GeneralRules": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "ReplenishmentPeriod": "00:00:10",
      "TokensPerPeriod": 10,
      "QueueLimit": 50
    },
    "AuthenticatedRules": {
      "PermitLimit": 1000,
      "Window": "00:01:00",
      "ReplenishmentPeriod": "00:00:10",
      "TokensPerPeriod": 100,
      "QueueLimit": 100
    }
  },
  "Compression": {
    "EnableCompression": true,
    "CompressionLevel": "Optimal",
    "MimeTypes": [
      "text/plain",
      "text/css",
      "application/javascript",
      "text/html",
      "application/xml",
      "text/xml",
      "application/json",
      "text/json",
      "application/rss+xml",
      "application/atom+xml",
      "image/svg+xml"
    ]
  },
  "Cache": {
    "DefaultCacheTimeInMinutes": 5,
    "LongCacheTimeInMinutes": 60,
    "ShortCacheTimeInMinutes": 1,
    "Redis": {
      "ConnectionString": "localhost:6379",
      "Database": 0,
      "KeyPrefix": "NotifyXStudio:",
      "ConnectTimeout": 5000,
      "SyncTimeout": 5000
    }
  },
  "Security": {
    "RequireHttps": false,
    "UseStrictTransportSecurity": true,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self'; media-src 'self'; object-src 'none'; child-src 'self'; frame-ancestors 'none'; form-action 'self'; base-uri 'self';",
    "FrameOptions": "DENY",
    "ContentTypeOptions": "nosniff",
    "ReferrerPolicy": "strict-origin-when-cross-origin",
    "PermissionsPolicy": "camera=(), microphone=(), geolocation=()"
  },
  "Monitoring": {
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false,
    "MetricsEnabled": true,
    "TracingEnabled": true,
    "PerformanceLogging": true
  },
  "ExternalServices": {
    "TimeoutInSeconds": 30,
    "RetryCount": 3,
    "RetryDelayInSeconds": 2
  },
  "Swagger": {
    "Title": "NotifyX Studio API",
    "Description": "A comprehensive project management and workflow automation platform",
    "Version": "v1",
    "ContactName": "NotifyX Studio Team",
    "ContactEmail": "support@notifyx.studio",
    "ContactUrl": "https://notifyx.studio",
    "LicenseName": "MIT License",
    "LicenseUrl": "https://opensource.org/licenses/MIT"
  },
  "FeatureFlags": {
    "EnableStubEndpoints": true,
    "EnableRealNotifications": true,
    "EnableRealWorkflows": false,
    "EnableRealAudit": false
  },
  "Providers": {
    "Email": {
      "Provider": "SMTP",
      "SmtpHost": "localhost",
      "SmtpPort": 587,
      "SmtpUsername": "",
      "SmtpPassword": "",
      "SmtpEnableSsl": true,
      "FromEmail": "noreply@notifyx.studio",
      "FromName": "NotifyX Studio"
    },
    "SMS": {
      "Provider": "Twilio",
      "TwilioAccountSid": "",
      "TwilioAuthToken": "",
      "TwilioFromNumber": ""
    },
    "Push": {
      "Provider": "FCM",
      "FcmServerKey": "",
      "FcmProjectId": ""
    },
    "Webhook": {
      "DefaultTimeoutSeconds": 30,
      "MaxRetryAttempts": 3,
      "RetryDelaySeconds": 5
    }
  }
}