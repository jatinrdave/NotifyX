{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Database=notifyxstudio;Username=postgres;Password=password",
    "Redis": "localhost:6379",
    "Kafka": "localhost:9092"
  },
  "RateLimiting": {
    "Enabled": true,
    "RequestsPerWindow": 100,
    "WindowMs": 60000,
    "EndpointRules": {
      "POST:workflow-runs": {
        "RequestsPerWindow": 10,
        "WindowMs": 60000
      }
    }
  },
  "RequestLogging": {
    "Enabled": true,
    "LogHeaders": true,
    "LogBody": false,
    "MaxBodySize": 4096,
    "SensitiveHeaders": [
      "Authorization",
      "X-API-Key",
      "X-Auth-Token",
      "Cookie",
      "Set-Cookie"
    ]
  },
  "SecurityHeaders": {
    "Enabled": true,
    "EnableCors": true,
    "CorsOrigin": "*",
    "EnableHsts": true,
    "EnableCsp": true,
    "EnableXFrameOptions": true,
    "EnableXContentTypeOptions": true,
    "EnableXXssProtection": true,
    "EnableReferrerPolicy": true,
    "EnablePermissionsPolicy": true
  },
  "ErrorHandling": {
    "Enabled": true,
    "IncludeStackTrace": false,
    "IncludeInnerException": true,
    "IncludeDetails": true,
    "ShowDetailedErrors": false,
    "LogErrors": true,
    "LogErrorDetails": true
  },
  "HealthCheck": {
    "Enabled": true,
    "EndpointPath": "/health",
    "ReadinessPath": "/health/ready",
    "LivenessPath": "/health/live",
    "Timeout": "00:00:30",
    "IncludeDetails": true,
    "IncludeExceptions": false
  },
  "Compression": {
    "Enabled": true,
    "EnableGzip": true,
    "EnableDeflate": true,
    "EnableBrotli": true,
    "MinimumContentLength": 1024,
    "CompressibleContentTypes": [
      "text/",
      "application/json",
      "application/xml",
      "application/javascript",
      "application/x-javascript",
      "text/css",
      "text/javascript",
      "text/xml",
      "text/plain",
      "text/html",
      "application/atom+xml",
      "application/rss+xml",
      "application/xhtml+xml",
      "image/svg+xml"
    ]
  },
  "Caching": {
    "Enabled": true,
    "DefaultCacheDurationSeconds": 300,
    "SlidingExpirationSeconds": 60,
    "CachePerUser": false,
    "CachePerTenant": true,
    "RequireAuthentication": false,
    "CacheablePaths": [
      "/api/connectors",
      "/api/workflows",
      "/api/credentials"
    ],
    "ExcludedPaths": [
      "/api/auth",
      "/api/health",
      "/api/metrics"
    ],
    "CacheableContentTypes": [
      "application/json",
      "application/xml",
      "text/plain",
      "text/html"
    ]
  },
  "Metrics": {
    "Enabled": true,
    "LogMetrics": true,
    "StoreMetrics": true,
    "SendToExternalSystems": false,
    "RetentionDays": 30,
    "CollectDetailedMetrics": true,
    "CollectUserMetrics": true,
    "CollectTenantMetrics": true
  }
}